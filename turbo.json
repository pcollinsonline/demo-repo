{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["AWS_ACCOUNT_ID", "AWS_REGION", "CDK_STAGE", "IMAGE_TAG", "VPC_ID"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["./src/**"],
      "outputs": ["./coverage/**"]
    },
    "typecheck": {
      "inputs": ["./src/**"],
      "dependsOn": ["build"]
    }
  }
}
